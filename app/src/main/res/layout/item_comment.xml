<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/componentBackground"
    android:elevation="2dp"
    android:padding="10dp">


        <TextView
            android:id="@+id/item_comment_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_comment_sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/item_comment_time"
            android:padding="5dp"
            android:singleLine="true" />


        <TextView
            android:id="@+id/item_comment_text"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/item_comment_sender"
            android:layout_marginStart="53dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:singleLine="false"
            android:textSize="16sp" />


</RelativeLayout>